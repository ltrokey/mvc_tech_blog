 <div class="post">
            <h2>{{post.title}}</h2>
            <p class="post-meta">Posted by {{post.user.username}} on {{format_date post.created_at}}</p>
            <p>{{post.body}}</p>
        </div>

        <div class="comments">
            <h3>Comments</h3>
            {{#if loggedIn}}

            <form action="/comment" method="POST">
                <label for="comment">Leave a Comment:</label>
                <textarea id="comment" name="comment" required></textarea>
                <input type="hidden" name="post_id" value="{{post.id}}">
                <button type="submit">Submit Comment</button>
            </form>
            {{else}}
            <p>Login to leave a comment.</p>
            {{/if}}

            {{#if post.comments.length}}

            <ul>
                {{#each post.comments as |comment|}}
                <li>
                    <p class="comment-meta">Comment by {{comment.user.username}} on {{format_date comment.created_at}}</p>
                    <p>{{comment.text}}</p>
                </li>
                {{/each}}
            </ul>
            {{else}}
            <p>No comments yet.</p>
            {{/if}}
        </div>