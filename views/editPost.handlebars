<div>
  <h2>Edit Post</h2>

  <form action="/api/posts/{{post.id}}" method="PUT" class="editPost">
    <label for="title">Title:</label>
    <input
      type="text"
      id="title"
      name="title"
      value="{{post.title}}"
      required
    />

    <label for="content">Content:</label>
    <textarea
      id="content"
      name="content"
      rows="4"
      required
    >{{post.content}}</textarea>

    <button type="submit">Save Changes</button>
  </form>
</div>

<script src="/js/editPost.js"></script>