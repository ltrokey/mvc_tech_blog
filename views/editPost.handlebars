<div class="editPostContainer">
  <div class="editPost">
    <h2 class="centered">Edit Post</h2>

    <div class="editForm">
      <form action="/api/posts/{{post.id}}" method="PUT" class="editPost">

        <label for="title">Title:</label>
        <input
          type="text"
          id="title"
          name="title"
          value="{{post.title}}"
          required
        />

        <label for="content">Content:</label>
        <textarea
          id="content"
          name="content"
          rows="4"
          required
        >{{post.content}}</textarea>

        <div class="editBtn centered">
          <button type="submit">Save Changes</button>
        </div>

      </form>
    </div>
  </div>
</div>

<script src="/js/editPost.js"></script>